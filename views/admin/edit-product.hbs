<section>
  <div class="container">
    <div class="col-md-6">
      <h2 class="text-center">Edit Product</h2>
      <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">

        <label  class="form-label">Name</label>
        <input type="text" name="name" class="form-control" value="{{product.name}}" />
        <label  class="form-label">Category</label>
        <input type="text" name="category" class="form-control" value="{{product.category}}" />
        <label  class="form-label">Price</label>
        <input type="text" name="price" class="form-control" value="{{product.price}}"/>
        <label class="form-label">Discription</label>
        <input type="text" name="discription" class="form-control" value="{{product.discription}}" />

        <label class="form-label">Image</label>
        <img src="/images/{{product._id}}.jpg" alt="" style="width:100px; height:auto" id="imgView">
        <input type="file" name="image" class="form-control" onchange="viewimg(event)"/>
        

        <button type="submit" class="btn btn-primary mt-4">Submit</button>
      </form>
    </div>
  </div>
  
</section>

<script>
  function viewimg(event) {
    document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]);
}

</script>